<!--
  SUMMARY:
  Moleculogic Tier 0 - Blueprint Preview Explorer
  - Public preview of MDC logic blueprints (Tier 2 examples)
  - Reads from blueprints.json to render MDC case logic
  - Helps users understand how MDC molecules are logic-driven
-->

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Explore public MDC logic blueprints from Moleculogic's Tier 2 system." />
  <title>MDC Logic Blueprint Explorer | Moleculogic</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-950 text-gray-200 font-mono">
  <header class="p-6 text-center border-b border-gray-800">
    <h1 class="text-3xl font-bold text-white">MDC Blueprint Preview</h1>
    <p class="text-gray-400 mt-2 max-w-2xl mx-auto">
      Explore logic circuits used in prototype MDC systems. These circuits are built from real Tier 2 experiments.
    </p>
  </header>

  <section class="p-6 max-w-6xl mx-auto">
    <div class="overflow-auto rounded border border-gray-700">
      <table class="min-w-full text-sm text-left">
        <thead class="bg-gray-800 text-gray-400 uppercase tracking-wider">
          <tr>
            <th class="p-3">Compound</th>
            <th class="p-3">Objective</th>
            <th class="p-3">Triggers</th>
            <th class="p-3">Response</th>
            <th class="p-3">Failsafe</th>
            <th class="p-3">Generated</th>
          </tr>
        </thead>
        <tbody id="blueprintTableBody" class="text-gray-300 divide-y divide-gray-800">
          <!-- Dynamically loaded rows -->
        </tbody>
      </table>
    </div>
  </section>

  <footer class="text-center p-6 border-t border-gray-800 text-gray-600 text-sm mt-10">
    <a href="index.html" class="text-blue-400 underline">&larr; Back to Preview Home</a><br/>
    &copy; 2025 Kunfirm Technologies. Moleculogic is a KT Biotech innovation.
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const tableBody = document.getElementById("blueprintTableBody");

      try {
        const response = await fetch("../data/blueprints.json");
        if (!response.ok) throw new Error("Failed to load blueprints");

        const blueprints = await response.json();
        blueprints.forEach(bp => {
          const row = document.createElement("tr");
          row.innerHTML = `
            <td class="p-3 text-green-400">${bp.compound}</td>
            <td class="p-3">${bp.objective}</td>
            <td class="p-3">${bp.triggers.join(" AND ")}</td>
            <td class="p-3 text-blue-400">${bp.response}</td>
            <td class="p-3 text-yellow-300">${bp.failsafe}</td>
            <td class="p-3 text-gray-500">${new Date(bp.generated).toLocaleDateString()}</td>
          `;
          tableBody.appendChild(row);
        });
      } catch (err) {
        console.error("Error loading blueprints:", err);
        tableBody.innerHTML = `<tr><td colspan="6" class="text-red-500 text-center py-4">Error loading MDC logic blueprints.</td></tr>`;
      }
    });
  </script>
</body>
</html>
